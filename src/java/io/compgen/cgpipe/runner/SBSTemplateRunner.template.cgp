#!${job.shell}
#SBS -name ${job.name}
<% if job.hold %>
#SBS -hold
<% endif %>
<% 
job.procs ?= 1
if job.procs > 1 %>
#SBS -procs ${job.procs}
<% endif %>
<% if job.mem %>
#SBS -mem ${job.mem}
<% endif %>
<% if job.sbs.depids %>
#SBS -afterok ${job.sbs.depids}
<% endif %>
<% if job.mail %>
#SBS -mail ${job.mail}
<% endif %>
<% if job.stdout %>
#SBS -stdout ${job.stdout}
<% endif %>
<% if job.stderr %>
#SBS -stderr ${job.stderr}
<% endif %>
<% for custom in job.custom %>
<% if custom %>
#SBS ${custom}
<% endif %>
<% done %>
#SBS -wd .

set -eo pipefail

${job._body}
